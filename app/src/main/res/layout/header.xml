<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="140dp"
    android:background="@color/primaryLightColor">

    <ImageView
        android:id="@+id/LogoAplicacion"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:src="@drawable/icono_app_header"
        android:transitionName="logoImageTrans"
        android:layout_above="@+id/txt_nombrecompleto"
        android:layout_marginBottom="8dp"
        android:layout_marginStart="10dp"/>

    <TextView
        android:id="@+id/txt_nombrecompleto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_above="@+id/txt_correousuario"
        android:layout_marginBottom="8dp"
        android:layout_marginStart="10dp"
        android:textColor="@color/secondaryTextColor"
        android:text="" />

        <TextView
            android:id="@+id/txt_correousuario"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=""
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:textColor="@color/secondaryTextColor"
            android:layout_marginBottom="20dp"
            android:layout_marginStart="10dp" />

</RelativeLayout>